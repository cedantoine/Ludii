(game "TestCountSizeBiggestLine" 
    (players 2) 
    (equipment { 
        (board (square 4 pyramidal:True) use:Vertex) 
        (piece "Ball" Each) 
    }) 
    (rules
        (play
        	(move Add 
        		(to (sites Empty) 
        			if:(is Flat)
                )
            )
        )
        (end
            (if (= (count SizeBiggestLine) 3) (result Mover Win))
        )
    )
)

